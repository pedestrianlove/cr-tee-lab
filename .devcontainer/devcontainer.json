{
  "name": "cr-tee-lab",
  "service": "cli",
  "remoteUser": "root",
  "shutdownAction": "stopCompose",
  "workspaceFolder": "/root",
  "dockerComposeFile": "compose.yaml",

  "customizations": {
    "vscode": {
      "extensions": [
        "stateful.runme",
        "ms-vscode.cpptools-extension-pack",
      ],
      "settings": {
        "editor.fontSize": 18,
        "editor.minimap.enabled": false,
        "workbench.editorAssociations": {
            "*.md": "markdown.preview.editor"
        }
      }
    }
  }
}
